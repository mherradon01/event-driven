rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    allow read: if  request.auth != null; // global read access
    match /rooms/{roomId} {
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/rooms/$(roomId)); // allow create room
      allow delete: if request.auth != null && request.auth.uid == resource.data.owner; // allow delete room
      allow update: if (!request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['guests']));
    }

    match /rooms/{roomId}/events/{eventId} {
      allow create: if request.auth != null; // allow create event
    }
  }
}